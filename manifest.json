{
	"extension": {
		"name": "Command Palette",
		"version": "1.0.0",
		"description": "Open the command palette instead of getting lost in the menu",
		"icon": "icon.png",
		"senders": [
			{
				"location": "studioToolbar",
				"icon": "icon.png",
				"actionName": "getCommandPalette"
			}
		],
		"actions": [
			{
				"name": "getCommandPalette",
				"title": "Command Palette",
				"shortcut": {
					"shortcutKey": "yes",
					"alternateKey": "no",
					"shiftKey": "yes",
					"key": "p"
				}
			},
			{
				"name": "initPreferences",
				"title": "Init Preferences",
				"trigger": [
					{ "event": "onStudioStart" }
				]
			}
		],
		"lifetime": "application_lifetime"
	}
}
